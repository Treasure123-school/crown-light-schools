modules = ["nodejs-20", "web"]
[agent]
expertMode = true
integrations = ["javascript_supabase:1.0.0", "javascript_database:1.0.0"]

[nix]
channel = "stable-25_05"
packages = ["sqlite", "unzip"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Start application"

[[workflows.workflow]]
name = "Start application"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "NODE_ENV=development npx tsx server/index.ts"
waitForPort = 5000

[deployment]
deploymentTarget = "autoscale"
build = ["npm", "run", "build"]
run = ["node", "./dist/index.cjs"]

[userenv]

[userenv.shared]
MINIO_USE_SSL = "false"
STORAGE_MODE = "disk"
UPLOAD_DIR = "uploads"

[[ports]]
localPort = 5000
externalPort = 80
